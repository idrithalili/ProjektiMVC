<h3>Menaxhimi i përdoruesve</h3>
<table class="table table-sm table-bordered">
    <tr>
        <th>Emri</th>
        <th>Email</th>
        <th>Roli</th>
        <th>Veprime</th>
    </tr>

@if (Model.Count() == 0) {
<tr><td colspan="4" class="text-center">Nuk ka llogari Përdoruesish</td></tr>
} 
else {
    foreach (var user in Model) {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.Role</td>

            <td class="text-center">
            <a class="btn btn-sm btn-primary" asp-controller="Admin"
            asp-route-id="@user.Id" asp-action="Create" >Shto Rol</a>
            <a class="btn btn-sm btn-warning" asp-controller="Admin"
            asp-route-id="@user.Id" asp-action="ShowEdit" >Modifiko</a>

            <form method="post" asp-controller="Admin" asp-action="Delete"
             asp-route-id="@user.Id" onsubmit="return confirm('A jeni te sigurte qe deshironi te fshini perdoruesin @user.UserName?');">

                <button type="submit" class="btn btn-sm btn-danger">
                Fshi
                </button>
            </form>

                    <a asp-controller="Admin" class="btn btn-sm btn-dark" asp-route-id="@user.Id"
                       asp-action="DeleteUserRole">Fshi Rol</a>

                    <!--<form method="post" asp-controller="Admin" asp-action="DeleteUserRole"
                        asp-route-id="user.Id" onsubmit="return confirm('A jeni te sigurte qe deshironi te fshini rolin e perdoruesit user.UserName?');">

                        <button type="submit" class="btn btn-sm btn-dark">
                            Fshi rol
                        </button>
                    </form>-->

            </td>
        </tr>
    }
}
</table>
