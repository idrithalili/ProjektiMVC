<h3>Menaxhimi i roleve</h3>

<table class="table table-sm table-bordered">
<tr>
    <th>Emri</th>
    <th>Veprime</th>
</tr>

@if (Model.Count() == 0) 
{
    <tr><td colspan="4" class="text-center">Nuk ka role</td></tr>
} 

else {
    foreach (var role in Model) {
        <tr>
        <td>@role.Name</td>
        <td>

        <form method="post" asp-controller="Role" asp-action="Delete"
        asp-route-id="@role.Id" onsubmit="return confirm('A jeni te sigurte qe deshironi te fshini rolin @role.Name?')">
            <a class="btn btn-sm btn-warning" asp-controller="Role"
                asp-route-Id="@role.Id" asp-action="ShowEdit" >Modifiko</a>
            <button type="submit" class="btn btn-sm btn-danger">
            Fshi
            </button>
        </form>
        </td>
        </tr>
    }
}
</table>

<a asp-action="Create" asp-controller="Role" class="btn btn-primary">Shto
Role</a>